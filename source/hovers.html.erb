---
<div>
	<ul class="examples-nav">
		<% current_page.data.hoverBlocks.each do |block| %>
		<% blockNum = current_page.data.hoverBlocks.index(block) + 1 %>
		<li><a href="#slide<%= blockNum %>" title="<%= block %>"><%= block %></a></li>
		<% end %>
	</ul>

	<% current_page.data.hoverBlocks.each do |block| %>
		<% blockNum = current_page.data.hoverBlocks.index(block) + 1 %>
		<%= partial(:"partials/hovers/_block__hover_#{block}", :locals => { :blockNumber => blockNum}) %>
	<% end %>
</div>